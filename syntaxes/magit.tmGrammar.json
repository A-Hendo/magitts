{
  "scopeName": "source.magit",
  "patterns": [
    {
      "include": "#expression"
    },
    {
      "include": "#diff"
    }
  ],
  "repository": {
    "expression": {
      "patterns": [
        {
          "include": "#sectionHeader"
        },
        {
          "include": "#highlight"
        },
        {
          "include": "#highlight2"
        },
        {
          "include": "#highlight3"
        },
        {
          "include": "#entity"
        },
        {
          "include": "#modified"
        }
      ]
    },
    "sectionHeader": {
      "match": "^(Untracked files|((Unstaged|Staged) changes)|Stashes|Recent commits|Unmerged into|Unpulled from|HEAD|Branches|Remote|Tags|GitError!|(Merging .*(?= \\())|(Rebasing .* onto .*$)|Cherry Picking|Reverting|Stash@{\\d+}|(Commits in .*$))",
      "name": "strong keyword.operator.new.section.header.magit"
    },
    "highlight": {
      "match": "^(join|pick)",
      "name": "string.highlight"
    },
    "highlight2": {
      "match": "^(done|gone)",
      "name": "support.type.property-name.json"
    },
    "highlight3": {
      "match": "^(onto)",
      "name": "string.quoted.double.json"
    },
    "entity": {
      "match": "(^stash@{\\d+}|((^| )(?=.*[0-9])(?=.*[a-z])([a-z0-9]{7}) ))",
      "name": "variable.object.property"
    },
    "modified": {
      "match": "^(modified|new file|deleted|renamed|copied|unmerged)   .*$",
      "name": "strong"
    },
    "diff": { 
      "begin": "(?=^@@)",
      "end": "(?=^(modified|new file|deleted|renamed|copied|unmerged))|(?=$^)",
      "patterns": [
        {
          "include": "source.diff"
        }
      ]
    }
  }
}